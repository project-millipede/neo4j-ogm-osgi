<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.neo4j</groupId>
    <artifactId>neo4j-ogm-osgi</artifactId>
    <version>4.0.0-SNAPSHOT</version>

    <name>Neo4j OGM OSGi - Modify</name>

    <packaging>pom</packaging>

    <properties>
        <gitlab.repo.id>placeholder-gitlab.repo.id</gitlab.repo.id>
        <gitlab.repo.url>placeholder-gitlab.repo.url</gitlab.repo.url>

        <pomutils-maven-plugin.version>1.1.0</pomutils-maven-plugin.version>
        <pomFile-to-alter>neo4j-ogm/pom.xml</pomFile-to-alter>
        <relativePath-parent>../</relativePath-parent>

        <neo4j-java-driver-modifier.version>4.0-SNAPSHOT</neo4j-java-driver-modifier.version>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>${gitlab.repo.id}</id>
            <url>${gitlab.repo.url}</url>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>info.bluespot</groupId>
                    <artifactId>pomutils-maven-plugin</artifactId>
                    <version>${pomutils-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>add-a-parent</id>
                            <phase>validate</phase>
                            <goals>
                                <goal>add-parent</goal>
                            </goals>
                            <configuration>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>${project.artifactId}</artifactId>
                                <version>${project.version}</version>
                                <relativePath>${relativePath-parent}</relativePath>
                                <pomFile>${pomFile-to-alter}</pomFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>add-properties-from-params</id>
                            <phase>validate</phase>
                            <goals>
                                <goal>add-properties</goal>
                            </goals>
                            <configuration>
                                <pomFile>${pomFile-to-alter}</pomFile>
                                <properties>
                                    <property>neo4j-java-driver.version=${neo4j-java-driver-modifier.version}</property>
                                </properties>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>info.bluespot</groupId>
                <artifactId>pomutils-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>